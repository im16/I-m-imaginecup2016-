                   Source="/Assets/loading.png" Stretch="UniformToFill"
                   RenderTransformOrigin="0.5,0.5"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image.RenderTransform>

                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>
           -->


        </StackPanel>
        <StackPanel x:Name="second" Margin="0,400,0,50" Grid.ColumnSpan="2">

            <Image Source="/Images/itsme.jpg" Height="50"/>

        </StackPanel>

        

    </Grid>


</Page>
