                            <Button.Background>
                                <ImageBrush ImageSource="/Assets/Edit_Profile/phone-button-3.png"/>
                            </Button.Background>
                        </Button>
                      
                    </Grid>
                    <Grid x:Name="Profile_Album"  Grid.Row="1" Background="#B3E3FA" Visibility="Collapsed">
