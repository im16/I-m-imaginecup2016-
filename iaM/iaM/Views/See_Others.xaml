                            <Image x:Name="Sign_3" Grid.Row="2" Grid.Column="3" Source="/Assets/Edit_Profile/Edit_Profile_Selection_Icon.png" Height="13" Width="13" Margin="0 0 0 0" Visibility="Collapsed"/>
                            <Image x:Name="Sign_4" Grid.Row="2" Grid.Column="4" Source="/Assets/Edit_Profile/Edit_Profile_Selection_Icon.png" Height="13" Width="13" Margin="0 0 0 0" Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Profile_Contact"  Grid.Row="1" Background="#B3E3FA" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0" Grid.ColumnSpan="3" Source="/Assets/Edit_Profile/Edit_Profile_Bar_Phone.png" VerticalAlignment="Top"/>


                        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0 0 0 1">
                            <Button.Background>
                                <ImageBrush ImageSource="/Assets/Edit_Profile/phone-button-4.png"/>
                            </Button.Background>
                        </Button>

                        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0 0 1 0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Assets/Edit_Profile/phone-button-1.png"/>
                            </Button.Background>
                        </Button>
                        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0 0 1 0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Assets/Edit_Profile/phone-button-2.png"/>
                            </Button.Background>
