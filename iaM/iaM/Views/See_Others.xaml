                            </Button>
                            <Button Grid.Row="1" Grid.Column="2" Margin="5 0 5 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Show_Album"  Height="50" Width="50" Style="{StaticResource Button_Style_Image}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Assets/Edit_Profile/Edit_Profile_Icon_Album.png"/>
                                </Button.Background>
                            </Button>


                            <Button Grid.Row="1" Grid.Column="3" Margin="5 0 5 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Show_Video"  Height="50" Width="50" Style="{StaticResource Button_Style_Video}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Assets/Edit_Profile/Edit_Profile_Icon_Video.png"/>
                                </Button.Background>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="4" Margin="5 0 5 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Show_SNS"  Height="50" Width="50" Style="{StaticResource Button_Style_Share}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/Assets/Edit_Profile/Edit_Profile_Icon_ShareSNS.png"/>
                                </Button.Background>
                            </Button>


                            <Image x:Name="Sign_1" Grid.Row="2" Grid.Column="1" Source="/Assets/Edit_Profile/Edit_Profile_Selection_Icon.png" Height="13" Width="13" Margin="0 0 0 0" Visibility="Visible"/>
