<Page
    x:Class="iaM.Views.Signup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iaM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!-- 로그인 페이지 구성-->
        <Button x:Name="InputPicture" Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="50" Text="&#xE722;" Margin="0 3 0 0"/>
        </Button>
        <StackPanel Grid.Row="1" x:Name="contentPanel" Margin="8,50,0,0" HorizontalAlignment="Center">
            
                <TextBox x:Name="UserName" Text="UserName" TextAlignment="Center" Width="280"/>
                
                <TextBox x:Name="Email" Text="Email" TextAlignment="Center" Width="280" />

                <TextBox x:Name="Password" Width="280" Text="Password" TextAlignment="Center"/>

                <TextBox x:Name="PhoneNumber" Width="280" Text="PhoneNumber" TextAlignment="Center"/>

            
           

        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center">

            <Button x:Name="inputButton" VerticalAlignment="Bottom" Content="Register Now!" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Page>
